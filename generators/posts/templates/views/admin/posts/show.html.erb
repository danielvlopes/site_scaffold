<% admin_page_header "Exibindo notícia" %>

<p>
  <b>Autor:</b>
  <%=h @post.author %>
</p>

<p>
  <b>Título:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Texto:</b>
  <%= @post.body %>
</p>

<p>
	<% for thumb in @post.images %>
	<%= link_to image_tag(thumb.image.url(:small)), thumb.image.url, :target => "_blank" %>
	<% end %>
</p>


<%= link_to 'Editar', edit_admin_post_path(@post) %> |
<%= link_to 'Voltar', admin_posts_path %>
