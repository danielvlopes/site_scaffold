<% for post in @posts %>
<h2><%=h post.title.titleize %></h2>
<p>publicado por <%=h post.author%> </p>

<div class="postBody">
<%= post.body %>
</div>

<div class="postImages">
<% for thumb in post.images %>
	<%= link_to image_tag(thumb.image.url(:small), :width => "70", :height=>"50"), thumb.image.url, :target=>'_blank' %>
<% end %>
</div>

<hr/>

<% end %>


